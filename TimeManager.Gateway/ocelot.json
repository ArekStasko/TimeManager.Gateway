{
  "Routes": [
    {
      "UpstreamPathTemplate": "/data/{type}/{method}",
      "UpstreamHttpMethod": [ "POST", "DELETE" ],

      "DownstreamPathTemplate": "/api/{type}/{method}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "timemanager.data",
          "Port": 80
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/idp/auth/{methodType}/{method}",
      "UpstreamHttpMethod": [ "POST" ],

      "DownstreamPathTemplate": "/api/auth/{methodType}/{method}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "timemanager.idp",
          "Port": 80
        }
      ]
    }
  ],
  "GlobalConfiguration": {}
}